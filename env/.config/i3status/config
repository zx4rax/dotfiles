# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}




order += "cpu_usage"
order += "memory"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "tztime local"

# Battery (for laptops, "all" aggregates all batteries)
battery all {
    format = "Bat: %status %percentage (%remaining)"
    last_full_capacity = true  # Adjust for battery wear
    integer_battery_capacity = true  # No decimals
    threshold_good = 80        # Green if >80%
    threshold_degraded = 20    # Yellow if <20%
    threshold_bad = 10         # Red if <10%
    status_chr = "CHR"         # Charging
    status_bat = "BAT"         # Discharging
    status_full = "FULL"       # Full
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
# CPU usage
cpu_usage {
    format = "CPU: %usage"
    max_threshold = 75      # Yellow if >75%
    critical_threshold = 90 # Red if >90%
}

# Memory usage
memory {
    format = "RAM: %used / %total (%available)"
    threshold_degraded = "1G"  # Yellow if free < 1GB
    threshold_critical = "500M" # Red if free < 500MB
}
# Wireless (replace wlan0 with your interface, check with `iwconfig`)
wireless _first_ {
    format_up = "WiFi: %essid (%quality)"
    format_down = "WiFi: down"
    quality_bar_width = 10  # Optional: bar length for signal
}

# Ethernet (replace eth0 with your interface, check with `ip link`)
ethernet _first_ {
    format_up = "Eth: %ip"
    format_down = "Eth: down"
}

